<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_layout" />

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:mpb_progressStyle="circular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/newChannelAvatar"
                style="@style/textNormalWhite"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_backgraund"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/tvChannelName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:hint="Channel Name *"
                android:singleLine="true"
                android:maxLines="1"
                android:textColorHint="@color/hint_grey"
                android:textSize="27sp"
                android:layout_weight="1"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/search_margin"
            android:background="@color/very_light_grey" />

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:hintTextAppearance="@style/HintTextStyle"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true">

            <EditText
                android:hint="Header (optional)"
                android:id="@+id/header"
                style="@style/DescriptionBlackTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/very_light_grey"
            android:layout_marginStart="@dimen/search_margin"
            android:layout_marginEnd="@dimen/search_margin"/>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:hintTextAppearance="@style/HintTextStyle"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true">

            <EditText
                android:hint="Purpose (optional)"
                android:id="@+id/purpose"
                style="@style/DescriptionBlackTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/very_light_grey"
            android:layout_marginStart="@dimen/search_margin"
            android:layout_marginEnd="@dimen/search_margin"/>

    </LinearLayout>


</layout>