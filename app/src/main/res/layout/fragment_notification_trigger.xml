<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_activity_grey">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    style="@style/CardView.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_start">

                    <TextView
                        android:id="@+id/titleFirstName"
                        style="@style/textVeryBigBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/triggers_first_name" />

                    <CheckBox
                        android:id="@+id/selectFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:button="@drawable/checkbox_selector" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/CardView.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_compat_inset_shadow">

                    <TextView
                        android:id="@+id/titleUserName"
                        style="@style/textVeryBigBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/triggers_username" />

                    <CheckBox
                        android:id="@+id/selectUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:button="@drawable/checkbox_selector" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/CardView.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_compat_inset_shadow">

                    <TextView
                        android:id="@+id/titleUserNameMentioned"
                        style="@style/textVeryBigBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/triggers_user_mention" />

                    <CheckBox
                        android:id="@+id/selectUserNameMentioned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:button="@drawable/checkbox_selector" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/CardView.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_compat_inset_shadow">

                    <TextView
                        android:id="@+id/titleChannelMentioned"
                        style="@style/textVeryBigBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/triggers_channel_mention" />

                    <CheckBox
                        android:id="@+id/selectChannelMentioned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:button="@drawable/checkbox_selector" />

                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/textGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_start"
                    android:text="@string/triggers_other_mention" />

                <android.support.v7.widget.CardView
                    style="@style/CardView.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_text_margin">

                    <EditText
                        android:id="@+id/otherMention"
                        style="@style/textNormalBlack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:hint="@string/triggers_other_mention_hint"
                        android:minLines="6"
                        android:gravity="top" />
                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/textGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/triggers_other_separate" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>