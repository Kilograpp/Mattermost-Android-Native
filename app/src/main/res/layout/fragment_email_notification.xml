<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_activity_grey"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/textGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_start"
                android:text="@string/email_title" />

            <android.support.v7.widget.CardView
                android:id="@+id/immediately"
                style="@style/CardView.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="true"
                android:layout_marginTop="@dimen/activity_vertical_text_margin">

                <TextView
                    style="@style/textLargeBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:text="@string/email_immediately" />

                <ImageView
                    android:id="@+id/selectImmediately"
                    android:layout_width="@dimen/bottom_toolbar_icon_size"
                    android:layout_height="@dimen/bottom_toolbar_icon_size"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_check_24dp"/>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/never"
                style="@style/CardView.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="false"
                android:layout_marginTop="@dimen/cardview_compat_inset_shadow">

                <TextView
                    style="@style/textLargeBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:text="@string/email_never" />

                <ImageView
                    android:id="@+id/selectNever"
                    android:layout_width="@dimen/bottom_toolbar_icon_size"
                    android:layout_height="@dimen/bottom_toolbar_icon_size"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_check_24dp"/>

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/description"
                style="@style/textGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />

        </LinearLayout>
    </ScrollView>
</layout>