<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- The main content view -->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/toolbar_channel_layout"/>

            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- The navigation drawer -->
        <ScrollView
            android:layout_gravity="start"
            android:layout_width="240dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:layout_width="240dp"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/fragmentChannelList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/fragment_menu_channel_list">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fragmentDirectList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/fragment_menu_direct_list">
                </FrameLayout>
            </LinearLayout>
        </ScrollView>

            <FrameLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:layout_gravity="end"
                android:layout_width="240dp"
                android:layout_height="match_parent">

                <TextView
                    android:padding="10dp"
                    android:id="@+id/logout"
                    android:textColor="@color/white"
                    android:text="@string/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>

    </android.support.v4.widget.DrawerLayout>
</layout>