<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.kilogramm.mattermost.ui.CheckableLinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_channel_backgroung"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/channel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/very_light_grey"
            tools:text="test channel" />

        <TextView
            android:id="@+id/unreadedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="2dp"
            android:textColor="@color/very_light_grey"
            android:textSize="12sp"
            tools:text="1" />

    </com.kilogramm.mattermost.ui.CheckableLinearLayout>
</layout>