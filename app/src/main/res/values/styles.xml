<resources>

<!--TODO this file needs review and refactor -->

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
    </style>

    <style name="searchActivityStyle" parent="AppTheme">
        <item name="colorControlActivated">@color/icon_team_color_end</item>
    </style>

    <style name="Transparent" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:keyTextSize">14sp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="CardView.Light.Blue" parent="CardView.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="ProgressWhite" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_show</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_hide</item>
    </style>

    <!--SCROLLBAR-->
    <style name="scrollbar_shape_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroll_bar_vertical_thumb</item>
        <item name="android:scrollbarSize">5dp</item>
    </style>

    <!--POPUP MENU-->
    <style name="PopupMenu" parent="@android:style/Widget.DeviceDefault.Light.PopupMenu">
        <item name="android:textSize">10sp</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- =================== Text styles ================== -->

    <!-- SIZES -->

    <style name="TextSmall" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextNormal" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextBig" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="TextLarge" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextVeryLarge" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_very_large</item>
    </style>

    <!-- COLORS -->

    <!-- White -->
    <style name="TextNormalWhite" parent="@style/TextNormal">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextNormalBoldWhite" parent="@style/TextNormal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLargeWhite" parent="@style/TextLarge">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextLargeBoldWhite" parent="@style/TextLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Black -->
    <style name="TextSmallBlack" parent="@style/TextSmall">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSmallBlackLinks" parent="@style/TextSmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="TextNormalBlack" parent="@style/TextNormal">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextNormalBoldBlack" parent="@style/TextNormal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBigBlack" parent="@style/TextBig">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBigBoldBlack" parent="@style/TextBig">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLargeBlack" parent="@style/TextLarge">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextVeryLargeBlack" parent="@style/TextVeryLarge">
        <item name="android:textColor">@color/black</item>
    </style>






    <!--BLUE-->
    <style name="textBlue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/title_blue</item>
    </style>

    <style name="textLightBlue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/icon_team_color_end</item>
    </style>

    <style name="textNormalBlue" parent="@style/textBlue"/>

    <style name="textBigLightBlue" parent="textLightBlue">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textLightBigBoldBlue" parent="textBigLightBlue">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textDarkGreyCaps" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textLittleBlue" parent="@style/textBlue">
        <item name="android:textSize">13sp</item>
    </style>

    <!--RED-->
    <style name="textRed" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textColorRed</item>
    </style>


    <!--BLACK-->


    <!--GREY-->
    <style name="textGrey" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textLittleGrey" parent="@style/textGrey">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="textBigGrey" parent="@style/textGrey">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textBigDarkGrey" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textLightGrey" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="textNormalGrey" parent="@style/textLightGrey">
        <item name="android:textSize">13sp</item>
    </style>


    <style name="textVeryBigDarkGrey" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="DescriptionBlackTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_grey</item>
        <item name="android:textSize">@dimen/description_text_size</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/description_text_size</item>
    </style>

</resources>
